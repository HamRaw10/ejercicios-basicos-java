package e;
import java.util.Scanner;

public class oa {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		System.out.println("Ingrese un string xd: ");
		String a = sc.nextLine();
		System.out.println("Â¿Quiere pasar su frase a mayuscula o minuscula? ");
		System.out.println("Minuscula(1), Mayuscula(2)");
		int opcion = sc.nextInt();
		if(opcion == 1) {
		System.out.println(a.toLowerCase());
		}
		else if(opcion == 2) {
			System.out.println(a.toUpperCase());
		}
	}
}
